
.slider{
    width: 52px
    background: #f7f7f7
    border-radius: 3px
    text-align: center
    box-shadow: 0 0 3px 1px rgba(0, 0, 0, 0.2)
    position: relative
    color: #866a62
    padding-top: 1em
    padding-bottom: 1em
}
.slider::before {
    width: 100%
    height: 1px
    background: #dedede
    position: absolute
    left: 0
    margin-top: 50px
    box-shadow: 0 1px 0 0 white, 0 230px 0 0 #dedede,  0 229px 0 0 white
}

.slider .drag-line {
    width: 8px
    height: 182px
    background: #ff9770
    border-radius: 8px
    margin: 25px auto
    position: relative
}
.slider .line {
    width: 8px
    height: 182px
    background: #adccce
    border-radius: 8px
    margin: 25px auto
    position: absolute
    margin-top: 0px
    margin-bottom: 0px
    padding-top: 10px
    clip: rect(0px, 8px, 183px, 0px)
}
.slider .draggable-button {
    width: 29px
    height: 29px
    background: #f7f7f7
    border-radius: 50%
    position: absolute
    box-shadow: 0px 4px 10px 1px rgba(0, 0, 0, 0.2)
    margin-left: -9px
    cursor: pointer
}
