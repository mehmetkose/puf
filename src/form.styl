input
    font-size: var(--font-size)
    outline: 0
    background: var(--dark-color)
    width: 100%
    border: 0
    margin: 0 0 1em
    padding: 0.6em
    box-sizing: border-box
    border-radius: 3px


button
    outline: 0;
    background: #adccce;
    width: 100%;
    border: 0;
    padding: 15px;
    color: #FFFFFF;
    font-size: 14px;
    -webkit-transition: all 0.3 ease;
    transition: all 0.3 ease;
    cursor: pointer;
