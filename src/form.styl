input, button
    font-size: 18px
    outline: 0
    background: var(--dark-color)
    width: 100%
    border: 0
    margin: 0 0 0.6em
    padding: 1em
    box-sizing: border-box
    border-radius: 3px
    color: gray

    &:focus
        color: gray

button
    outline: 0;
    background: #adccce;
    color: #FFFFFF;
    -webkit-transition: all 0.3 ease;
    transition: all 0.3 ease;
    cursor: pointer;
