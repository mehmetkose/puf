.toggle

    label
        background: var(--dark-color)
        display: block
        position: relative
        cursor: pointer
        outline: none
        user-select: none
        padding: 2px
        width: 110.4px
        height: 48px
        border-radius: 24px

    label:after
        display: block
        position: absolute
        content: ""
        top: 0
        left: 0
        bottom: 0
        margin: auto 0
        width: 60px
        height: 60px
        background: #fff
        border-radius: 50%
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3)
        transition: background 0.4s, left 0.4s, height 0.2s, width 0.2s

    input:checked + label
        box-shadow: inset 0 0 0 48px #adccce

    input:checked + label:after
        left: calc(100% - 60px)
        background: #adccce + 50%
